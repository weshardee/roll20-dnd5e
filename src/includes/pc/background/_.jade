.sheet-col
    .sheet-col__row

        h1.sheet-hdg Appearance, Vision, Languages and Alignment

        .sheet-row
            .sheet-row__cell
                +field('Gender')
                    input(
                        type="text"
                        name="attr_gender"
                    )
            .sheet-row__cell
                +field('Age')
                    input(
                        type="number"
                        name="attr_age"
                    )
            .sheet-row__cell
                +field('Height')
                    input(
                        type="text"
                        name="attr_height"
                    )
            .sheet-row__cell
                +field('Weight')
                    input(
                        type="text"
                        name="attr_weight"
                    )
            .sheet-row__cell
                +field('Eyes')
                    input(
                        type="text"
                        name="attr_eyes"
                    )
            .sheet-row__cell
                +field('Hair')
                    input(
                        type="text"
                        name="attr_hair"
                    )
            .sheet-row__cell
                +field('Size')
                    input(
                        type="text"
                        name="attr_size"
                    )

        .sheet-row
            .sheet-row__cell.sheet-row__cell-1-6
                +field('Vision')
                    input(
                        type="text"
                        name="attr_vision"
                    )
            .sheet-row__cell.sheet-row__cell-2-3
                +field('Known Languages')
                    input(
                        type="text"
                        name="attr_prolanguages"
                    )
            .sheet-row__cell.sheet-row__cell-1-6
                +field('Alignment')
                    input(
                        type="text"
                        name="attr_alignment"
                    )

    .sheet-col__row
        h1.sheet-hdg Background, Traits, Ideals, Bonds and Flaws

        .sheet-row.sheet-row--hd
            .sheet-row__cell Background
            .sheet-row__cell Racial Traits
            .sheet-row__cell Personality Traits

        .sheet-row
            .sheet-row__cell
                textarea(name="attr_background")
            .sheet-row__cell
                textarea(name="attr_racial_traits")
            .sheet-row__cell
                textarea(name="attr_personality_traits")

        .sheet-row.sheet-row--hd
            .sheet-row__cell Ideals
            .sheet-row__cell Bonds
            .sheet-row__cell Flaws


        .sheet-row
            .sheet-row__cell
                textarea(name="attr_ideals")
            .sheet-row__cell
                textarea(name="attr_bonds")
            .sheet-row__cell
                textarea(name="attr_flaws")

    .sheet-col__row

        h1.sheet-hdg Equipment Proficiencies

        .sheet-row.sheet-row--hd
            .sheet-row__cell Armour Proficiencies
            .sheet-row__cell Weapon Proficiencies
            .sheet-row__cell Tool Proficiencies


        .sheet-row
            .sheet-row__cell
                textarea(name="attr_pro_armour")
            .sheet-row__cell
                textarea(name="attr_pro_weapons")
            .sheet-row__cell
                textarea(name="attr_pro_tools")
