.sheet-row.sheet-row--hd
    .sheet-row__cell Class Levels

- var i = 0
- var row = 1
- var numClassesPerRow = 3

while i < classes.length
    .sheet-row
        while i < row * numClassesPerRow
            - var pcClass = classes[i]
            .sheet-row__cell
                .sheet-label #{pcClass}
            .sheet-row__cell.sheet-row__cell--sm
                input.sheet-labelled(
                    type="number"
                    name="attr_#{pcClass}_level"
                    value="0"
                    min="0"
                    step="1"
                )
            - i++
    - row++
