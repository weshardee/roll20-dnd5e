h1.sheet-hdg Weight 

.sheet-row
    .sheet-row__cell
        p.sheet-note All weights in lbs. 
.sheet-row
    .sheet-row__cell.sheet-row__cell--3 
        +field('loot', 'disabled')
            input(type="number" name="attr_inventory_weight" value="@{inventory_weight_calc}" disabled) 
    .sheet-row__cell.sheet-row__cell--3 
        +field('coin', 'disabled')
            input(type="number" name="attr_coin_weight" value="((@{CP} + @{SP} + @{EP} + @{GP} + @{PP}) / 50)" disabled) 
    .sheet-row__cell.sheet-row__cell--3 
        +field('other')
            input(type="number" name="attr_other_weight" value="0" min="0" step="0.01")  
    .sheet-row__cell.sheet-row__cell--4 
        +field('total', 'disabled')
            input(type="number" name="attr_total_weight" value="@{inventory_weight} + @{coin_weight} + @{other_weight}" disabled) 
    .sheet-row__cell.sheet-row__cell--4 
        +field('max', 'disabled')
            input(type="number" name="attr_total_weight_max" title="The maximum total weight your character can carry" value="@{strength}*15" disabled) 
    .sheet-row__cell.sheet-row__cell--6 
        +field('push/drag/lift', 'disabled')
            input(type="number" name="attr_max_push_drag_lift" title="This is the maximum weight you can push/drag/lift.  If the weight you are pushing/dragging/carrying exceeds your maximum carrying capacity then your speed drops to 5 feet" value="@{strength}*30" disabled) 
