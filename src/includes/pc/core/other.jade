.sheet-grid
    .sheet-grid__cell
        .sheet-card
            .sheet-hdg Inspiration?
            input.sheet-toggle.sheet-toggle--inspiration(
                type='checkbox'
                name='attr_inspiration'
                value='1'
            )
    
    .sheet-grid__cell.sheet-grid__cell--2
        .sheet-card
            h1.sheet-hdg Death Saving Throws

            .sheet-row
                .sheet-row__cell
                    .sheet-row
                        .sheet-row__cell.sheet-row__cell--md
                            .sheet-label Successes:
                        .sheet-row__cell
                            +tick('attr_death_save_success_1')(class= 'sheet-tick--good')
                        .sheet-row__cell
                            +tick('attr_death_save_success_2')(class= 'sheet-tick--good')
                        .sheet-row__cell
                            +tick('attr_death_save_success_3')(class= 'sheet-tick--good')
                    .sheet-row
                        .sheet-row__cell.sheet-row__cell--md
                            .sheet-label Failures:
                        .sheet-row__cell
                            +tick('attr_death_save_fail_1')
                        .sheet-row__cell
                            +tick('attr_death_save_fail_2')
                        .sheet-row__cell
                            +tick('attr_death_save_fail_3')

                .sheet-row__cell.sheet-row__cell--sm
                    - var deathSave = '[[ 1d20 + (@{global_saving_bonus}) [Active Save Bonus] ]]'
                
                    +roll(
                        title= 'Death Saving Throw'
                        value= '/em makes a DEATH save: \n\n #{deathSave} | #{deathSave}'
                    )
