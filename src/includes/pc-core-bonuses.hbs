<div class="grid grid--col grid--pad">

    <div class="grid__cell">
        <!-- bonuses row 1 -->
        <h1 class="hdg">Bonuses/Penalties <i class="sheet-pictos">3</i></h1>
        <p class="sheet-small-note">Use this to apply bonuses (or penalties) to all rolls of the specified type rolled using the sheet's macros.</p>
    </div>

    <div class="grid__cell">
        <!-- bonuses row 2 -->
        <div class="grid grid--pad">

            <div class="grid__cell">
                <h2 class="hdg hdg--2">Melee</h2>
                <div class="grid grid--split">
                    <div class="grid__cell">
                        <label class="field">
                            <span class="field__label">Attack Rolls</span>
                            <input class="field__field" type="text" id="attr_global_melee_attack_bonus" name="attr_global_melee_attack_bonus" value="0">
                        </label>
                    </div>
                    <div class="grid__cell">
                        <label class="field">
                            <span class="field__label">Damage Rolls</span>
                            <input class="field__field" type="text" id="attr_global_melee_damage_bonus" name="attr_global_melee_damage_bonus" value="0">
                        </label>
                    </div>
                </div>
            </div>

            <div class="grid__cell">
                <h2 class="hdg hdg--2">Ranged</h2>
                <div class="grid grid--split">
                    <div class="grid__cell">
                        <label class="field">
                            <span class="field__label">Attack Rolls</span>
                            <input class="field__field" type="text" id="attr_global_ranged_attack_bonus" name="attr_global_ranged_attack_bonus" value="0">
                        </label>
                    </div>
                    <div class="grid__cell">
                        <label class="field">
                            <span class="field__label">Damage Rolls</span>
                            <input class="field__field" type="text" id="attr_global_ranged_damage_bonus" name="attr_global_ranged_damage_bonus" value="0">
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="grid__cell">
        <!-- bonuses row 3 -->
        <h2 class="hdg hdg--2"> Spellcasting </h2>

        <div class="grid grid--split">
            <div class="grid__cell">
                <label class="field">
                    <span class="field__label">Attack Rolls</span>
                    <input class="field__field" type="text" id="attr_global_spell_attack_bonus" name="attr_global_spell_attack_bonus" value="0">
                </label>
            </div>
            <div class="grid__cell">
                <label class="field">
                    <span class="field__label">Damage Rolls</span>
                    <input class="field__field" type="text" id="attr_global_spell_damage_bonus" name="attr_global_spell_damage_bonus" value="0">
                </label>
            </div>
            <div class="grid__cell">
                <label class="field">
                    <span class="field__label">Save DC</span>
                    <input class="field__field" type="text" id="attr_global_spell_dc_bonus" name="attr_global_spell_dc_bonus" value="0" step="1">
                </label>
            </div>
        </div>
    </div>
    <div class="grid__cell">
        <!-- bonuses row 4 -->
        <h2 class="hdg hdg--2"> Saves and skill checks </h2>

        <div class="grid grid--split">
            <div class="grid__cell">
                <label class="field">
                    <span class="field__label">Saving thows</span>
                    <input class="field__field" type="text" id="attr_global_saving_bonus" name="attr_global_saving_bonus" value="0">
                </label>
            </div>
            <div class="grid__cell">
                <label class="field">
                    <span class="field__label">Ability/Skill Checks</span>
                    <input class="field__field" type="text" id="attr_global_check_bonus" name="attr_global_check_bonus" value="0">
                </label>
            </div>
        </div>
    </div>
</div>
