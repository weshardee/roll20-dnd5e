<div class="grid">

    <div class="grid__cell grid__cell--1-2 sheet-padr">

        <h4 class="sheet-center">Core Stats</h4>

        <div class="grid sheet-sub-header">
            <div class="grid__cell grid__cell--1-6 sheet-center label">Score</div>
            <div class="grid__cell grid__cell--1-6 sheet-center label">&nbsp;</div>
            <div class="grid__cell grid__cell--1-6 sheet-center label">Mod</div>
            <div class="grid__cell grid__cell--1-6 sheet-center label">Save Prof?</div>
            <div class="grid__cell grid__cell--1-6 sheet-center label">Save Bonus</div>
            <div class="grid__cell grid__cell--1-6 sheet-center label">Save</div>
        </div>

        <div class="grid">
            <div class="grid__cell grid__cell--1-6"><input type="number" id="attr_strength" name="attr_strength" min="1" step="1"/></div>
            <div class="grid__cell grid__cell--1-6 sheet-core-stat-label">Str</div>
            <div class="grid__cell grid__cell--1-6"><input type="number" id="attr_strength_mod" name="attr_strength_mod" value="(floor((@{strength}-10)/2))" disabled="disabled"/></div>
            <div class="grid__cell grid__cell--1-6 sheet-vert-middle sheet-checkbox-row"><input type="checkbox" id="attr_strength_save_prof" name="attr_strength_save_prof" value="@{PB}" /></div>
            <div class="grid__cell grid__cell--1-6"><input type="number" id="attr_strength_save_mod" name="attr_strength_save_mod" value="@{strength_mod} + @{strength_save_prof}" disabled="disabled"></div>
            <div class="grid__cell grid__cell--1-6 sheet-center"><button type="roll" class="sheet-core-save" id="roll_Strength_Save" name="roll_Strength_Save" value="/em attempts a saving throw\n\nSTR save :[[1d20 + @{strength_save_mod} [Stat Mod and Proficiency] + (@{global_saving_bonus}) [Active Save Bonus] ]] | [[1d20 + @{strength_save_mod} [Stat Mod and Proficiency] + (@{global_saving_bonus}) [Active Save Bonus] ]]">Save</button></div>
        </div>

        <div class="grid">
            <div class="grid__cell grid__cell--1-6"><input type="number" id="attr_dexterity" name="attr_dexterity"  min="1" step="1"/></div>
