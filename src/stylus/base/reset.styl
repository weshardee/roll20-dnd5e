    background-size (HEIGHT/3)
    background-repeat no-repeat
    background-position 'calc(100% - %s)' % (HEIGHT/4)


.sheet-wrapper input[type=number]:disabled::-webkit-inner-spin-button,
.sheet-wrapper input[type=number]:disabled::-webkit-outer-spin-button
    -webkit-appearance: none;
    margin: 0;

.sheet-wrapper textarea
    min-height LINE_HEIGHT * FONT_SIZE * 5
    flex 1
    text-align left
    padding PAD
    border 1px solid transparent

.sheet-wrapper textarea:focus
    border-color BLUE

.sheet-wrapper fieldset
    width 100%
    min-width 0
