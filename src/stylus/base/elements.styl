.sheet-wrapper img
    max-width 100%

.sheet-wrapper :focus
    border 1px solid BLUE
    outline none !important
    box-shadow none

.sheet-wrapper input
    flex-grow 1

.sheet-wrapper [type=number]
    padding-left 12px // match width of counter on right to center the value visually
    border 1px solid transparent // for focus override

.sheet-wrapper [disabled]
    cursor not-allowed

.sheet-wrapper select
    -webkit-appearance none
    padding PAD
    flex 1

.sheet-wrapper input[type=number]:disabled::-webkit-inner-spin-button,
.sheet-wrapper input[type=number]:disabled::-webkit-outer-spin-button
    -webkit-appearance: none;
    margin: 0;

.sheet-wrapper textarea
    min-height LINE_HEIGHT * FONT_SIZE * 5
    flex 1
    text-align left
    padding PAD

.sheet-wrapper fieldset
    width 100%
    min-width 0
