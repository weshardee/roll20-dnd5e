@keyframes bubble {
	0% {
        transform scale(0)
        opacity 1
    }
    50% {
        transform scale(1)
        opacity 1
    }
	100% {
        transform scale(1)
        opacity 0
    }
}

.sheet-title-field {
    position relative
    overflow hidden
    z-index 1

    margin auto
    height auto
    border 1px solid transparent !important
    border-bottom 1px solid alpha(white, 0.2) !important
    background transparent
    color white
}

.sheet-title-field > input {
    position relative
    z-index 2
    background-color transparent
    border 0 !important // override global focus
    width auto // override global
    height auto
    color white
}

.sheet-title-field__bar {
    transition transform 0.2s
    transform scaleX(0)

    position absolute
    right 0
    bottom 0
    left 0

    border-bottom 3px solid white

    content " "
}

.sheet-title-field__bubble {
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 0
    opacity 0
}

.sheet-title-field__bubble::after {
    transform translateY(-50%) translateX(-50%)
    position absolute
    top 50%
    left 50%

    background-color alpha(white, 0.5)
    border-radius 50% !important
    padding 52%

    content " "
}

/* on focus */

:focus ~ .sheet-title-field__bar {
    transform scaleX(1)
}

:focus ~ .sheet-title-field__bubble {
    animation bubble 0.6s ease
}

/* size variations */

.sheet-title-field__name {
    display block
    font-size 3rem
}

.sheet-title-field__sub {
    display inline-block
    margin PAD
}

.sheet-title-field__sub > input {
    padding 0.4em
    text-transform uppercase
}
