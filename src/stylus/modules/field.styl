FIELD_LABEL_LAYER = 1
FIELD_FIELD_LAYER = 0

FIELD_LABEL_HEIGHT = 1rem
FIELD_LABEL_OVERLAP = FIELD_LABEL_HEIGHT * 0.7

.field
    border-radius inherit
    display flex
    flex-direction column
    flex 1
    position relative

.field[disabled]
    background-color PALE
    cursor not-allowed

.field__label
    bottom 0
    font-size (FIELD_LABEL_HEIGHT / LINE_HEIGHT)
    left 0
    position absolute
    right 0
    z-index FIELD_LABEL_LAYER
    color FADED_GRAY

.field__field
    flex 1
    height HEIGHT + FIELD_LABEL_OVERLAP
    padding-bottom FIELD_LABEL_OVERLAP
    z-index FIELD_FIELD_LAYER
    border-radius inherit
