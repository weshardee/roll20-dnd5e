.sheet-field
    border 1px solid transparent
    min-height HEIGHT
    width 100% !important
    padding 0 (HEIGHT/3)
    flex 1

.sheet-field:focus
    border-color BLUE

.sheet-field:disabled
    background-color PALE
    padding-left 0 !important // reset number padding

.sheet-field--alt:disabled
    background-color BRIGHT_PALE_BLUE

.sheet-field[type=number]
    padding-right 0
