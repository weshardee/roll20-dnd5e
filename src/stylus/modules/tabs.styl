.sheet-tabs
    display flex
    flex-direction row
    flex-wrap wrap

// tabs for sections
.sheet-tabs__tab
    -webkit-appearance none
    align-items center
    background-color BLUE
    border 1px solid transparent // so size doesn't jump :focus
    color white
    display flex
    flex-grow 1
    height HEIGHT !important
    width auto !important
    margin 0 !important

.sheet-tabs__tab:hover
    background-color alpha(BLUE, 0.85)

.sheet-tabs__tab:first-of-type
    border-bottom-left-radius RADIUS
    border-top-left-radius RADIUS

.sheet-tabs__tab:last-of-type
    border-bottom-right-radius RADIUS
    border-top-right-radius RADIUS

.sheet-tabs__tab:checked
    background-color GOLD

.sheet-tabs__tab::after
    content attr(title)

// sections

.sheet-tabs__section
    display none
    margin-top PAD
    width 100% // in a flex wrap area

// visibility

.sheet-tabs__tab--0:checked ~ .sheet-tabs__section
    display block

for num in (1...10)
    .sheet-tabs__tab--{num}:checked ~ .sheet-tabs__section--{num}
        display block

.sheet-tabs__tab--0:checked ~ .sheet-tabs__section,
.sheet-tabs__tab--99:checked ~ .sheet-tabs__section
    display block
