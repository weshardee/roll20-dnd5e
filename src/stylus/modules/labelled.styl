FIELD_LABEL_LAYER = 1
FIELD_FIELD_LAYER = 2

FIELD_HEIGHT = 2.7rem

FIELD_LABEL_FONT_SIZE = FONT_SIZE_SM
FIELD_LABEL_HEIGHT = FIELD_LABEL_FONT_SIZE * 1.4
FIELD_LABEL_OVERLAP = 0.3rem

.sheet-labelled
    // display flex
    // flex-direction column // vertical layout

    position relative
    z-index 0 // new layering context
    padding-bottom (FIELD_LABEL_HEIGHT - FIELD_LABEL_OVERLAP)

.sheet-labelled--disabled
    background-color PALE
    cursor not-allowed

.sheet-labelled--blue
    background-color BRIGHT_PALE_BLUE
    cursor not-allowed

.sheet-labelled--hdg
    font-size FONT_SIZE
    background-color LIGHT

.sheet-labelled > :first-child
    display flex
    flex-direction column // vert centering

    height HEIGHT
    max-width 100% !important

    background-color transparent !important
    border 0 !important

    line-height 1

.sheet-labelled__label
    display flex
    align-items flex-start

    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index FIELD_LABEL_LAYER

    border 1px solid transparent
    padding-top (HEIGHT - FIELD_LABEL_OVERLAP)

    color FADED_GRAY
    font-size FIELD_LABEL_FONT_SIZE
    line-height 1 // always 1 line

:focus + .sheet-labelled__label
    border-color BLUE

// alternate colors

:disabled + .sheet-labelled__label
    background-color PALE
