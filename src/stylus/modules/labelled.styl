FIELD_LABEL_LAYER = 1
FIELD_FIELD_LAYER = 2

FIELD_HEIGHT = 2.7rem

FIELD_LABEL_FONT_SIZE = FONT_SIZE_SM
FIELD_LABEL_HEIGHT = FIELD_LABEL_FONT_SIZE * 1.4
FIELD_LABEL_OVERLAP = 0.3rem

.sheet-labelled
    // display flex
    // flex-direction column // vertical layout

    position relative
    z-index 0 // new layering context
    padding-bottom (FIELD_LABEL_HEIGHT - FIELD_LABEL_OVERLAP)
    padding-right 0 !important // override app.css
    margin 0 !important // override app.css

.sheet-labelled--disabled
    background-color PALE
    cursor not-allowed

.sheet-labelled--blue
    background-color BRIGHT_PALE_BLUE
    cursor not-allowed

.sheet-labelled--hdg
    font-size FONT_SIZE
    background-color LIGHT

.sheet-labelled > :first-child
    display flex
    flex-direction column // vert centering
    position relative
    z-index FIELD_FIELD_LAYER

    height HEIGHT !important // override app.css
    width 100% !important // override app.css
    max-width 100% !important // override app.css

    background-color transparent !important
    border 0 !important

    font-size FONT_SIZE

.sheet-labelled > select
    padding-left (HEIGHT/4)
    line-height 2.3 // centering

.sheet-labelled__label
    display flex
    align-items flex-start

    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index FIELD_LABEL_LAYER

    border 1px solid transparent
    padding-top (HEIGHT - FIELD_LABEL_OVERLAP)

    color FADED_GRAY
    font-size FIELD_LABEL_FONT_SIZE
    line-height 1 // always 1 line

:focus + .sheet-labelled__label
    border-color BLUE

// alternate colors

:disabled + .sheet-labelled__label
    background-color PALE
