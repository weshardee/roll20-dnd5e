.sheet-tick
    -webkit-appearance none
    background white
    border-width 1px
    display flex
    align-items center
    flex 1 // fill grid__cell
    width 100%
    margin 0 !important// reset from base.css
    outline none
    border 0 !important

.sheet-tick::after
    -webkit-appearance none
    background #fff
    background-clip content-box
    border 1px solid rgba(0,0,0,0.15)
    border-radius 50%
    box-shadow inset 0 0 0 2px rgba(255,255,255,1)
    box-sizing border-box
    content " "
    height 1rem
    width 1rem

.sheet-tick:checked::after
    background-color rgba(72,70,75, 0.9)

.sheet-tick--good:checked::after
    background-color GOLD
    border-color alpha(GOLD, 0.15)
