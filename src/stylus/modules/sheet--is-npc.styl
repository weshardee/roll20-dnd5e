/* sheet type button */

.sheet .sheet--is-npc {
    -webkit-appearance none
    align-items center
    background-color BLUE
    border-radius RADIUS
    color white
    display flex
    height HEIGHT
    margin 0 // override base.css
    width 100%
}

.sheet .sheet--is-npc:checked {
    background-color PALE
    color DARK_GRAY
}

.sheet .sheet--is-npc::after {
    content "Player Sheet"
}

.sheet .sheet--is-npc:checked::after {
    content "NPC Sheet"
}
