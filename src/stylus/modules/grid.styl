grid-border()
    &::after
        border 0 solid BORDER_COLOR
        content " "
        position absolute
        top 0
        right 0
        left 0
        bottom 0
        pointer-events none
        {block}

.sheet-grid
    min-width 100%
    align-items stretch
    display flex
    position relative // for borders
    min-height HEIGHT

.sheet-grid--col
    flex-direction column

// space between cells

.sheet-grid--pad
    margin (- PAD / 2)
    min-width calc(100% - @margin)

.sheet-grid--pad > *
    border-radius RADIUS
    padding (PAD / 2)

// dividers between cells

.sheet-grid--split > *
    background-color white
    +grid-border()
        border-bottom-width 1px
        border-left-width 1px

.sheet-grid--split > :last-child::after
    border-right-width 1px

// alternate colors

.sheet-grid--sub
    background-color alpha(DARK_GRAY, 0.9)
    color white
    font-size FONT_SIZE_SM
    min-height HEIGHT
    +grid-border()
        border-bottom-width 1px

// grid items

.sheet-grid__cell
    flex 1
    position relative // for borders
    display flex
    flex-direction column

.sheet-grid--pad > *
    justify-content flex-start

// sizes

.sheet-grid__cell--sm
    flex HIGH
    max-width PAD * 3

.sheet-grid__cell--md
    flex HIGH
    max-width PAD * 6

for grow in (1...10)
    .sheet-grid__cell--{grow}
        flex (grow)


for max in (2...25) {
    for span in (1...max) {
        .sheet-grid__cell--{span}-{max} {
            flex none
            width (span / max) * 100%
        }
    }
}
